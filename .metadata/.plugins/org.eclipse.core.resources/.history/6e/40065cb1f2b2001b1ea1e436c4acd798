void SWITCH_Ini(){
    *GPIOB_MODER &= ~0x0000000F;	/* PB0 y PB1 como ... */
    *GPIOB_MODER |=  0x00000000;	/* ... entrada */

    *GPIOB_PUPDR &= ~0x0000000F;	/* PB0 y PB1 con ...*/
    *GPIOB_PUPDR |= ~0x00000005;	/* ... pull-up */
}

