int main(void)
{
	SYSTEM_Ini();		// HW Init

	LED_Set(0x00000000);		/* Estado del LED */

    /* Loop forever */
	while(1){
		//BTN_0_Led_ON();
		BTN_1_Led_ON();
	}
}


void BTN_0_Led_ON(){
	if(SWITCH_Get_BTN_0()==0){
		LED_Set(0x00FF00FF);
	}
	else if(SWITCH_Get_BTN_0()==1) {
		LED_Set(0x33335555);
	}
	else
		LED_Set(0x00000000);
}

void BTN_1_Led_ON(){
	if(SWITCH_Get_BTN_1()==0){
		LED_Set(0xAAAA0000);
	}
	else if(SWITCH_Get_BTN_1()==1) {
		LED_Set(0xFFFF5555);
	}
	else
		LED_Set(0x00000000);
}
